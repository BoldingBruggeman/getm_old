#
# Set options for the NAG Fortran compiler.
ifeq ($(FORTRAN_COMPILER),NAG)
FC=f95nag
DEFINES += -DFORTRAN95
can_do_F90=true
MODULES=-mdir $(MODDIR)
EXTRAS	= -f77
DEBUG_FLAGS = -g -C=all -O0
PROF_FLAGS  = -pg -O3
PROD_FLAGS  = -O3
REAL_4B	= real*4
endif
